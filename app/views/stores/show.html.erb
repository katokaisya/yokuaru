<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<article>
  <div>
    <h2><%= @store.store_name %><span><%= @store.store_area %></span></h2>
    <h3><%= @store.stor_catch %><span><%= @store.store_genre %></span></h3>
    <p>所在地：<%= @store.store_address %><span><%= tel_to "#{@store.store_tel}" %></span></p>

<p>
  <strong>説明:</strong>
  <%= @store.store_description %>
</p>
<p>
  <strong>行き方:</strong>
  <%= @store.store_access %>
</p>

<p>
  <strong>TEL:</strong>
  <%= @store.store_tel %>
</p>

<p>
  <strong>E-mail:</strong>
  <%= @store.store_email %>
</p>

<p>
  <strong>URL:</strong>
  <%= @store.storeurl %>
</p>

<p>
  <strong>動画:</strong>
  <%= @store.store_movie %>
</p>

<h2>ブログ<span><%= @store.blogs.count %>件</span></h2>

  <ul>
    <% @store.blogs.each do |blog| %>
        <li><%= link_to "#{blog.blog_title}",blog_path(blog) %>
        <%= blog.blog_date %></li>
    <% end %>
  </ul>


<p><%= link_to 'Destroy', store_path, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
</article>






